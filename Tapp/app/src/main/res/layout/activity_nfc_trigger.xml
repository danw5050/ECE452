<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NFCTriggerActivity">

    <!-- hard coding on this page will be removed-->
    <RelativeLayout
        android:background="#EBEBEB"
        android:layout_width="200dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/nfcTriggerTitle"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Tapp Activated"
            android:background="#999999"
            android:textColor="#FFF"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="20dp"
            />

        <ProgressBar
            android:layout_below="@id/nfcTriggerTitle"
            android:paddingBottom="15dp"
            android:paddingTop="5dp"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/NFCActionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_alignParentBottom="true"
            android:textColor="#6B6B6B"
            android:text="Preparing to launch..."
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="4dp"/>


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>