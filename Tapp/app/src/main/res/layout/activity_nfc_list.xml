<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NFCTriggerActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C0C0C0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <android.support.design.widget.BottomNavigationView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/navigation"
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="start"
            android:background="#A6A6A6"
            app:layout_constraintBottom_toTopOf="@+id/title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:menu="@menu/navigation_menu" />

        <ImageView
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-3dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="3dp"
            app:srcCompat="@drawable/tapp_banner" />

        <TextView
            android:id="@+id/tagsTitle"
            android:layout_width="147dp"
            android:layout_height="35dp"
            android:layout_above="@+id/navigation"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="133dp"
            android:layout_marginEnd="131dp"
            android:layout_marginBottom="450dp"
            android:fontFamily="sans-serif-black"
            android:text="Your NFC Tags:"
            android:textColor="@android:color/black"
            android:textColorHighlight="@android:color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/addNewTag"
            android:layout_width="239dp"
            android:layout_height="64dp"
            android:layout_above="@+id/navigation"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="83dp"
            android:layout_marginBottom="68dp"
            android:background="@android:color/black"
            android:textColor="@android:color/darker_gray"
            android:text="Add New Tag"
            android:textAllCaps="false"
            android:textSize="18sp" />

        <Button
            android:id="@+id/studyTable"
            android:layout_width="369dp"
            android:layout_height="80dp"
            android:layout_above="@+id/addNewTag"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="235dp"
            android:background="#A6A6A6"
            android:drawableBottom="?attr/dividerHorizontal"
            android:fontFamily="sans-serif-black"
            android:paddingLeft="25dp"
            android:text="Study Table"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textColorHighlight="@android:color/black"
            android:textSize="18sp" />


        <Button
            android:id="@+id/workTable"
            android:layout_width="369dp"
            android:layout_height="80dp"
            android:layout_above="@+id/addNewTag"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="147dp"
            android:background="#A6A6A6"
            android:drawableBottom="?attr/dividerHorizontal"
            android:fontFamily="sans-serif-black"
            android:paddingLeft="25dp"
            android:text="Work Table"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textColorHighlight="@android:color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/bedroomTable"
            android:layout_width="369dp"
            android:layout_height="80dp"
            android:layout_above="@+id/addNewTag"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="55dp"
            android:background="#A6A6A6"
            android:drawableBottom="?attr/dividerHorizontal"
            android:fontFamily="sans-serif-black"
            android:paddingLeft="25dp"
            android:text="Bedroom Table"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textColorHighlight="@android:color/black"
            android:textSize="18sp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>